              <h1>회원가입</h1>
              </div>
              <form action="/register" method="POST">
              <div class="col-md-8 order-md-1">
                <h4 class="mb-3">가입정보</h4>
                <form class="needs-validation" novalidate>
                  <div class="row">
                    <div class="col-md-6 mb-3">
                      <label>성</label>
                      <input
                        type="text"
                        class="form-control"
                        id="firstName"
                        name="성"
                     
                        required
                      />
                      <div class="invalid-feedback">
